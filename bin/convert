#!/usr/bin/env php
<?php
/**
 *  Conversion settings files from one format to another
 */
namespace Convert;

use function \Converter\convert;
use function \Converter\Error\error;

require_once __DIR__ . '/../vendor/autoload.php';

$options = getopt("s:t:o");
if (!isset($options['s']) || !isset($options['t'])) {
    fwrite(STDERR, 'missing parameters. usage convert -i input.file -o output.file' . PHP_EOL);
}

if(convert($options['s'], $options['t'], array_key_exists('o', $options)) === false) {
    exit(1);
}
exit(0);
